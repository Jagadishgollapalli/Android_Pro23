<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_bg"

    tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/light_bg"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="208dp"
                    android:fontFamily="@font/amita"
                    android:text="Save the Starve"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_conversion_absoluteHeight="27dp"
                    tools:layout_conversion_absoluteWidth="138dp" />

                <TextView
                    android:id="@+id/introduction_text"
                    android:layout_width="370dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/basic"
                    android:justificationMode="inter_word"
                    android:text="Welcome to SaveTheStarve, where we believe in sharing not just meals but also hope and compassion. Our mission is to bridge the gap between surplus food and those in need. We are committed to reducing food waste and alleviating hunger in our communities."
                    android:textColor="#0C0C0C"
                    android:textSize="14sp"
                    app:barrierMargin="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.483"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/app_name"
                    app:layout_marginBaseline="0dp"
                    tools:layout_conversion_absoluteHeight="5006dp"
                    tools:layout_conversion_absoluteWidth="0dp" />

                <TextView
                    android:id="@+id/app_description"
                    android:layout_width="367dp"
                    android:layout_height="91dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/basic"
                    android:justificationMode="inter_word"
                    android:text="At SaveTheStarve, we've created a platform that brings together food donors, volunteers, and recipients to make a difference in the lives of those facing food insecurity. We connect surplus food from restaurants, events, and individuals with local shelters, food banks, and people in need."
                    android:textColor="#0C0C0C"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.487"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/introduction_text"
                    tools:layout_conversion_absoluteHeight="5640dp"
                    tools:layout_conversion_absoluteWidth="0dp" />

                <TextView
                    android:id="@+id/contact_info"
                    android:layout_width="370dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/belleza"
                    android:text="Have questions or feedback? We'd love to hear from you! Please feel free to reach out to us via email:"
                    android:textColor="#0C0C0C"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.487"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/app_description"
                    tools:layout_conversion_absoluteHeight="2168dp"
                    tools:layout_conversion_absoluteWidth="0dp" />

                <TextView
                    android:id="@+id/email_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="108dp"
                    android:fontFamily="@font/belleza"
                    android:shadowColor="#78CAEF"
                    android:text="EMAIL US : savethestarve@gmail.com"
                    android:textColor="#0C0C0C"
                    android:textColorLink="#71BDDF"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/app_description"
                    tools:layout_conversion_absoluteHeight="22dp"
                    tools:layout_conversion_absoluteWidth="187dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="414dp"
                    android:layout_height="220dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/support" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="164dp"
                    android:layout_marginTop="608dp"
                    android:background="#024D70"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/fb" />

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="204dp"
                    android:layout_marginTop="608dp"
                    android:background="#0C078C"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/is" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="244dp"
                    android:layout_marginTop="608dp"
                    android:background="#043F47"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/twitter_25x25" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>