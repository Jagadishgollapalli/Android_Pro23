<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ADD8E6"
        android:orientation="vertical">

        <Button
            android:id="@+id/DonateButton"
            android:layout_width="106dp"
            android:layout_height="109dp"
            android:layout_margin="30dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/donate"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="45dp" />

        <Button
            android:id="@+id/receiveButton"
            android:layout_width="96dp"
            android:layout_height="120dp"


            android:layout_marginStart="60dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/recieve"
            app:layout_constraintStart_toEndOf="@+id/DonateButton"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/donateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Donate"

            app:layout_constraintTop_toBottomOf="@+id/DonateButton"
            app:layout_constraintStart_toStartOf="@+id/DonateButton"
            />

        <TextView
            android:id="@+id/recieveTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recieve"
            app:layout_constraintTop_toBottomOf="@+id/receiveButton"

            app:layout_constraintStart_toStartOf="@+id/receiveButton"
            tools:layout_editor_absoluteX="271dp" />

        <ImageButton
            android:id="@+id/aboutusButton"
            android:layout_width="120dp"
            android:layout_height="92dp"

            android:layout_marginStart="60dp"
            android:layout_marginTop="32dp"
            android:contentDescription="about"
            android:onClick="about"

            android:src="@drawable/aboutus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donateTV" />

        <ImageButton
            android:id="@+id/customerButton"
            android:layout_width="113dp"
            android:layout_height="98dp"
            android:layout_margin="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="56dp"
            android:contentDescription="customer"
            android:onClick="customer"
            android:src="@drawable/customer"

            app:layout_constraintStart_toEndOf="@+id/aboutusButton"

            app:layout_constraintTop_toBottomOf="@+id/recieveTV"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>